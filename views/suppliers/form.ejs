<%- include('../layout', { title: supplier._id ? 'Edit Supplier' : 'Add Supplier', body: '' }) %>

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center"><%= supplier._id ? 'Edit Supplier' : 'Add Supplier' %></h2>

  <form action="<%= supplier._id ? '/suppliers/edit/' + supplier._id : '/suppliers' %>" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Supplier Name</label>
      <input type="text" class="form-control" name="name" value="<%= supplier.name || '' %>" required>
    </div>
    <div class="mb-3">
      <label for="address" class="form-label">Address</label>
      <input type="text" class="form-control" name="address" value="<%= supplier.address || '' %>">
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">Phone</label>
      <input type="text" class="form-control" name="phone" value="<%= supplier.phone || '' %>">
    </div>
    <button type="submit" class="btn btn-success w-100"><%= supplier._id ? 'Update' : 'Add' %></button>
  </form>
</div>
